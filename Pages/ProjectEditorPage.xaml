<Page x:Class="Diasoria.Pages.ProjectEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diasoria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectEditorPage" Background="GhostWhite">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock x:Name="ProjectName" 
                     Text="Новый Проект" 
                     FontSize="20" 
                     VerticalAlignment="Center"
                     Margin="10, 0, 10, 0"/>
            <Button x:Name="ButtonEventAdd" Content="Добавить Событие" Margin="20, 0, 10, 0"/>
            <Button x:Name="ButtonRelationAdd" Content="Добавить Связь" Margin="10, 0, 10, 0"/>

        </StackPanel>
        <Canvas Grid.Row="1">
            
        </Canvas>
    </Grid>
</Page>
